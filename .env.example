# ──────────────────────────────────────────────────
# Fundi Wangu — Environment Configuration
# Copy this file to .env and fill in your values.
# ──────────────────────────────────────────────────

# App
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
WEB_BASE_URL=http://localhost:3001

# Database (PostgreSQL 16 + PostGIS)
DATABASE_URL=postgresql://fundiwangu:local_dev_password@localhost:5432/fundiwangu
DATABASE_SSL=false

# Redis 7
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_ACCESS_SECRET=replace-with-256-bit-random-secret
JWT_REFRESH_SECRET=replace-with-different-256-bit-random-secret
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# Selcom Paytech — Tanzania mobile money gateway
# Docs: https://dev.selcommobile.com
SELCOM_API_KEY=
SELCOM_API_SECRET=
SELCOM_VENDOR_ID=
SELCOM_WEBHOOK_SECRET=
SELCOM_BASE_URL=https://apigw.selcommobile.com/v1

# Africa's Talking — SMS/USSD provider
# Docs: https://africastalking.com/docs
AT_API_KEY=
AT_USERNAME=sandbox
AT_SENDER_ID=FUNDIWANGU

# Firebase Cloud Messaging — Push notifications
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Google Maps Platform — Geocoding, distance, live tracking
GOOGLE_MAPS_API_KEY=

# AWS S3 or Cloudflare R2 — File storage
S3_BUCKET_NAME=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=

# Sentry — Error tracking (optional in development)
SENTRY_DSN=

# Encryption — AES-256 for NIN numbers and payout wallet numbers
ENCRYPTION_KEY=replace-with-256-bit-key
ENCRYPTION_IV=replace-128bit-iv!

# Expo Push Notifications (mobile app)
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_WS_URL=ws://localhost:3000
EXPO_PUBLIC_GOOGLE_MAPS_KEY=
