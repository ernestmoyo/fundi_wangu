# ──────────────────────────────────────────────────
# Fundi Wangu — Production Environment
# Copy to .env.production and fill in real values.
# NEVER commit this file with real secrets.
# ──────────────────────────────────────────────────

# ── App ──────────────────────────────────────────
NODE_ENV=production
PORT=3000
API_BASE_URL=https://api.fundiwangu.co.tz
WEB_BASE_URL=https://fundiwangu.co.tz

# ── Docker Image Version ────────────────────────
API_VERSION=latest

# ── Database ─────────────────────────────────────
POSTGRES_DB=fundiwangu
POSTGRES_USER=fundiwangu
POSTGRES_PASSWORD=CHANGE_ME_strong_password_here
DATABASE_SSL=false

# ── Redis ────────────────────────────────────────
REDIS_PASSWORD=CHANGE_ME_redis_password_here

# ── JWT ──────────────────────────────────────────
JWT_ACCESS_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32
JWT_REFRESH_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# ── Selcom Paytech ───────────────────────────────
SELCOM_API_KEY=
SELCOM_API_SECRET=
SELCOM_VENDOR_ID=
SELCOM_WEBHOOK_SECRET=
SELCOM_BASE_URL=https://apigw.selcommobile.com/v1

# ── Africa's Talking ─────────────────────────────
AT_API_KEY=
AT_USERNAME=
AT_SENDER_ID=FUNDIWANGU

# ── Firebase ─────────────────────────────────────
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ── Google Maps ──────────────────────────────────
GOOGLE_MAPS_API_KEY=

# ── Storage ──────────────────────────────────────
S3_BUCKET_NAME=fundiwangu-uploads
S3_REGION=af-south-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=

# ── Sentry ───────────────────────────────────────
SENTRY_DSN=

# ── Encryption ───────────────────────────────────
ENCRYPTION_KEY=CHANGE_ME_generate_with_openssl_rand_hex_16
ENCRYPTION_IV=CHANGE_ME_gen_16ch
